<!DOCTYPE html>
<html>
<head>
	<title>Handy Zeb Admin</title>
	<link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
		<% include partials/nav %>
        <div class="container">
        <div class="page-header">
		<h1>Welcome, Handy Zeb Admin</h1>
		<h2>Pending Customers</h2>
        </div>
		<table class="table table-hover">
			<tr>
				<th>Username</th>
				<th>Password</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Address</th>
				<th>E-mail</th>
				<th>Contact Number</th>
			</tr>
			<% customerUsers.forEach(function(item){ %>
				<tr>
					<td><%= item.userName %></td>
					<td><%= item.password %></td>
					<td><%= item.firstName %></td>
					<td><%= item.lastName %></td>
					<td><%= item.address %></td>
					<td><%= item.email %></td>
					<td><%= item.contactNumber %></td>
					<td> <form action="/accept" method="post"><input name="userName" type="text" value=<%= item.userName %> hidden><input type="submit" value="Accept"></form><form action="/reject" method="post"><input name="userName" type="text" value=<%= item.userName %> hidden><input type="submit" value="Reject"></form></td>
				</tr>
			<% }) %>
        </table>
    </div>    
</body>
</html>