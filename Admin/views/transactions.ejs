<!DOCTYPE html>
<html>
<head>
	<title>HandyZeb Admin</title>
	<link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
	<% include partials/nav %>
	<div class="container">
		<h2>Transactions</h2>
		<form action="/search-transaction-on-name" method="post">
			<input type="text" placeholder="Customers/SP" name="searchItem"><input type="submit" value="Search">
		</form>
		<form action="/search-transaction-on-status" method="post">
			<select name="status">
				<option value="">Choose Status</option>
				<option value="done">Done</option>
				<option value="ongoing">Ongoing</option>
				<option value="pending">Pending</option>
			</select>
			<input type="submit" value="Search">
		</form>
		
		<form action="/search-transaction-on-date" method="post">
			<label>From:</label>
			<input type="date" name="from">
			<label>To:</label>
			<input type="date" name="to"><input type="submit" value="Search">
		</form>

	<% if (transactions.length !=0 ){ %>
		<table class="table table-hover">
			<tr>
				<th>Transaction Number</th>
				<th>Customer Name</th>
				<th>Service Provider Name</th>
				<th>Service</th>
                <th>Status</th>
                <th>Date Started</th>
                <th>Date Finished</th>
			</tr>

			<% transactions.forEach(function(item){ %>
				<tr>
					<td><%= item.bookingId %></td>
					<td><%= item.customerName %></td>
					<td><%= item.spName %></td>
					<td><%= item.serviceType %></td>
                    <td><%= item.bookingStatus %></td>
                    <td><%= item.dateStarted %></td>
                    <td><%= item.dateFinished %></td>
				</tr>
			<%	}) %>

		</table>
	<% }else{ %>
		<p>No Transactions yet</p>
	<% } %>
	</div>
</body>
</html>